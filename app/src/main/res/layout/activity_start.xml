<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.ria.rsvp.StartActivity">

    <ImageView
        android:id="@+id/frame"
        android:layout_width="400dp"
        android:layout_height="290dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.236"
        app:srcCompat="@drawable/tropical_crop" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/login"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/frame"
        app:layout_constraintTop_toTopOf="@+id/frame" />

    <EditText
        android:id="@+id/userPassword"
        android:layout_width="78dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="@string/password"
        android:inputType="numberPassword"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/userName"
        app:layout_constraintTop_toTopOf="@+id/userName" />

    <ImageView
        android:id="@+id/goForwardBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="goForwardClicked"
        app:layout_constraintBottom_toBottomOf="@+id/userPassword"
        app:layout_constraintStart_toEndOf="@+id/userPassword"
        app:layout_constraintTop_toTopOf="@+id/userPassword"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/ic_arrow_forward_black_24dp" />

</android.support.constraint.ConstraintLayout>
